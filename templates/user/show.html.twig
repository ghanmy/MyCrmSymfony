{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="app-title">
    <div>
        <h1><i class="fa fa-users"></i> Utilisateurs</h1>
    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path("home") }}"><i class="fa fa-home fa-lg"></i></a></li>
        <li class="breadcrumb-item"><a href="{{ path("user_index") }}">Utilisateurs</a></li>
        <li class="breadcrumb-item"><a href="">Afficher Utilisateur</a></li>
    </ul>
</div>
<div class="tile">
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ user.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ user.prenom }}</td>
        </tr>
        <tr>
            <th>Tel1</th>
            <td>{{ user.tel1 }}</td>
        </tr>
        <tr>
            <th>Tel2</th>
            <td>{{ user.tel2 }}</td>
        </tr>
        <tr>
            <th>Pays</th>
            <td>{{ user.pays }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
        </tr>
        <tr>
            <th>IsActive</th>
            <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>
    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
</div>
{% endblock %}
