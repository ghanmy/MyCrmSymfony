{% extends 'base.html.twig' %}

{% block title %}Calls{% endblock %}

{% block body %}
    <h1>Calls</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ call.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ call.date ? call.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ call.comments }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ call.subject }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('calls_index') }}">back to list</a>

    <a href="{{ path('calls_edit', {'id': call.id}) }}">edit</a>

    {{ include('calls/_delete_form.html.twig') }}
{% endblock %}
